<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >

    <ImageView
        android:id="@+id/imageViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/title_banner"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        />

    <ImageView
        android:id="@+id/imageViewPokemon"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/title_pikachu"
        app:layout_constraintBottom_toTopOf="@+id/buttonStartGame"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTitle"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/buttonStartGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/btn_rounded_corner"
        android:fontFamily="@font/pokemon_classic"
        android:text="New Game"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonHelp"
        tools:layout_editor_absoluteX="20dp"
        android:onClick="startNewGame"
        />

    <Button
        android:id="@+id/buttonHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/btn_rounded_corner"
        android:fontFamily="@font/pokemon_classic"
        android:text="Help"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonSettings"
        android:onClick="displayRandomPokemon"
        />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/btn_rounded_corner"
        android:fontFamily="@font/pokemon_classic"
        android:text="Settings"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonQuit"
        android:onClick="startCompare"
        />

    <Button
        android:id="@+id/buttonQuit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/btn_rounded_corner"
        android:fontFamily="@font/pokemon_classic"
        android:text="Quit"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

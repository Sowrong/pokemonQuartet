<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGame">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/pokemon_classic"
        android:gravity="center"
        android:text="Help"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageTitle" />

    <ImageView
        android:id="@+id/imageTitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:src="@drawable/game_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageTitle"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="center"
                android:text="Let's start with the rules of the very unique quartet game!"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="left"
                android:text="There are two player comparing stats on their cards simultaneously."
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="left"
                android:text="The player with the higher number gets two points, one on a tie and zero otherwise."
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="left"
                android:text="The player coosing can continue on a win or tie."
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="left"
                android:text="The player choosing can continue on a win or tie."
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="left"
                android:text="After the last round you win if you scored most points."
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="left"
                android:text="The game can be played against an AI or against another human."
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="left"
                android:text="In case you play against a human you need to share a room number with your opponent."
                android:textSize="12dp"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:src="@drawable/help_choice" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="left"
                android:text="The host of the game can choose how many rounds to play. The guest needs to input the room number to join."
                android:textSize="12dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:src="@drawable/help_room_input" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="left"
                android:text="When playing against the AI you can choose between three difficulties."
                android:textSize="12dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:src="@drawable/help_single_player" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/pokemon_classic"
                android:gravity="center"
                android:text="Have Fun!"
                android:textSize="28dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonBack"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_white"
        android:fontFamily="@font/pokemon_classic"
        android:gravity="center"
        android:onClick="back"
        android:text="â†"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>